{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "Path": "Logs/AccomodationApi_Logs-.txt",
          "RollingInterval":  "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "Accomodation": "Server=(localdb)\\Accomodation;Database=Accomodation;Trusted_Connection=true;"
  },
  "AllowedHosts": "*"
}
